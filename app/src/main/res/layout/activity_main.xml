<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".MainActivity">

    <!-- Testo di benvenuto (titolo)-->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="@dimen/textSizeTitle"
        android:textColor="@color/white"
        android:background="@color/brown"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_marginStart="@dimen/marginL"
        android:layout_marginEnd="@dimen/marginR"
        android:padding="@dimen/padding" />

    <!-- ScrollView per il contenuto principale -->
    <ScrollView
        android:id="@+id/movies_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_marginStart="@dimen/marginL"
        android:layout_marginEnd="@dimen/marginR"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Esempio di riquadro per un film -->
            <LinearLayout
                android:id="@+id/Film"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner"
                android:padding="@dimen/padding"
                android:layout_marginBottom="@dimen/marginBottom">

                <!-- Immagine del film -->
                <ImageView
                    android:id="@+id/film_image"
                    android:layout_width="@dimen/IMGwidth"
                    android:layout_height="@dimen/IMGheight"
                    android:contentDescription="@string/movie_image_desc"
                    android:src="@drawable/film" />

                <!-- Contenitore per testo descrizione e pulsante -->
                <LinearLayout
                    android:layout_width="@dimen/layout"
                    android:layout_height="@dimen/filmHeight"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/filmPadding"
                    android:paddingTop="@dimen/padding"
                    android:paddingEnd="@dimen/filmPadding"
                    android:paddingBottom="@dimen/padding">

                    <!-- Testo descrittivo -->
                    <TextView
                        android:id="@+id/film_description"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/FilmTextHeight"
                        android:text="@string/filmdesc"
                        android:textSize="@dimen/filmText" />


                    <!-- Pulsante in basso a destra -->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/BottonDesc" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
