<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Background ImageView -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/movie_background"
        android:alpha="0.3" />

    <!-- Title TextView -->
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Description TextView -->
    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_below="@id/title_text_view"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Price TextView -->
    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $6.99"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@id/description_text_view"
        android:layout_centerHorizontal="true" />

    <!-- Address EditText -->
    <EditText
        android:id="@+id/address_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your address"
        android:layout_below="@id/price_text_view"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:inputType="text" />

    <TextView
        android:id="@+id/attention_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚠️ ATTENZIONE! il pagamento avviene solo alla consegna in contanti"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_below="@id/address_edit_text"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Proceed Button -->
    <Button
        android:id="@+id/proceed_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed to Purchase"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp" />

</RelativeLayout>
