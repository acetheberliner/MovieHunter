<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:padding="@dimen/padding">>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="5dp"
        android:background="@drawable/film_rounded_corner"
        android:layout_centerHorizontal="true"
        android:paddingStart="@dimen/paddingStart"
        android:paddingEnd="@dimen/paddingEnd">

        <!-- imageview sopra -->
        <ImageView
            android:id="@+id/success"
            android:layout_width="146dp"
            android:layout_height="82dp"
            android:layout_marginTop="@dimen/marginTop_4"
            android:layout_centerHorizontal="true"
            android:src="@drawable/success"
            android:tint="@color/transparent_sky"/>

        <!-- prima textview sotto la imageview -->
        <TextView
            android:id="@+id/address_hint_text_view"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/success"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/marginTop_4"
            android:fontFamily="@font/gg_sans_bold"
            android:gravity="center"
            android:text="@string/end_thanks"
            android:textColor="@color/low_opacity_black"
            android:textSize="@dimen/textSize_3" />

        <!-- seconda textview sotto la prima -->
        <TextView
            android:id="@+id/attention_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_hint_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginBottom="@dimen/marginBottom_4"
            android:fontFamily="@font/gg_sans_regular"
            android:gravity="center"
            android:text="@string/preparation_time"
            android:textColor="@color/low_opacity_black"
            android:textSize="@dimen/textSize_2" />

    </RelativeLayout>


    <Button
        android:id="@+id/action_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/text_for_end_page"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/marginBottom_6"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="@color/transparent_sky"
        android:fontFamily="@font/gg_sans_regular"/>

</RelativeLayout>
