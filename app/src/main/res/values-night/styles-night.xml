<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Stile personalizzato per la SearchView in modalità notte -->
    <style name="CustomSearchViewStyleNight" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/black</item> <!-- Black bg -->
        <item name="android:queryBackground">@color/black</item> <!-- Query bg -->
        <item name="android:textColorHint">@color/white</item> <!-- hint text color -->
        <item name="android:textColor">@color/search_text_color</item> <!-- text color -->
        <item name="android:iconifiedByDefault">false</item> <!-- Show non-iconicalized search bar -->
    </style>

    <!-- Stile personalizzato per l'EditText in modalità notte -->
    <style name="CustomEditTextStyleNight" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>


</resources>
