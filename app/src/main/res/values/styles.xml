<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SearchView custom style-->
    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/white</item> <!-- White bg -->
        <item name="android:queryBackground">@color/white</item> <!-- Query bg -->
        <item name="android:textColorHint">@color/black</item> <!-- hint text color -->
        <item name="android:textColor">@color/search_text_color</item> <!-- text color -->
        <item name="android:iconifiedByDefault">false</item> <!-- Show non-iconicalized search bar -->
    </style>

    <!-- EditText custom style -->
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <!-- TextInputLayout custom style -->
    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="helperTextTextColor">@color/white</item>
        <item name="counterTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
