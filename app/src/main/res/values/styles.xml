<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SearchView custom style-->
    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/white</item>
        <item name="android:queryBackground">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/search_text_color</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>

    <!-- EditText custom style -->
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/low_opacity_black</item>
        <item name="android:fontFamily">@font/gg_sans_regular</item>
        <item name="android:textColorHint">@color/low_opacity_black</item>
    </style>

    <!-- TextInputLayout custom style -->
    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/transparent_sky</item>
        <item name="android:textColorHint">@color/transparent_sky</item>
        <item name="boxStrokeColor">@color/transparent_sky</item>
        <item name="helperTextTextColor">@color/transparent_sky</item>
        <item name="counterTextColor">@color/transparent_sky</item>
        <item name="android:textColor">@color/transparent_sky</item>
    </style>

</resources>
